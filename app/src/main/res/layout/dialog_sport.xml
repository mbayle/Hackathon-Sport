<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ListView
        android:id="@+id/sport_list"
        android:layout_width="394dp"
        android:layout_height="240dp"
        android:layout_marginLeft="-26dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/buttonAddSport"
        android:layout_width="282dp"
        android:layout_height="wrap_content"
        android:text="@string/add_sport_button"
        android:layout_below="@+id/sport_list"
        android:layout_alignParentStart="true"
        android:background="#00000000"
        android:layout_toStartOf="@+id/imageView2"
        android:layout_marginTop="11dp"
        app:layout_constraintTop_toBottomOf="@+id/sport_list"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="39dp"
        android:layout_height="41dp"
        android:src="@drawable/ic_shortcut_ajouter"
        android:layout_alignBottom="@+id/buttonAddSport"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.927"
        app:layout_constraintBottom_toBottomOf="@+id/buttonAddSport"
        android:layout_marginBottom="3dp" />
</android.support.constraint.ConstraintLayout>